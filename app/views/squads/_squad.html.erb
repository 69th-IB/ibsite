<%= tag.div class: "squad",
    id: dom_id(squad),
    style: "border-color: ##{squad.color};" do %>
  <strong class="name"><%= squad.name %></strong>

  <ul class="slots">
    <%= render squad.slots %>
  </ul>

  <% case squad.children.count %>
  <% when 0 %>
  <% when 1 %>
    <%= render squad.children %>
  <% else %>
    <div class="squad-list">
      <%= render squad.children %>
    </div>
  <% end %>
<% end %>
